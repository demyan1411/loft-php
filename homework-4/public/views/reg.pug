extends layouts/layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Project name
      #navbar.collapse.navbar-collapse

        include blocks/menu

      // /.nav-collapse
  .container
    .form-container
      form#reg-form.form-horizontal(action='/registration')
        .form-group
          label.col-sm-2.control-label(for='inputEmail3') Логин
          .col-sm-10
            input#inputEmail3.form-control(type='text', name='login' placeholder='Логин')
        .form-group
          label.col-sm-2.control-label(for='inputPassword3') Пароль
          .col-sm-10
            input#inputPassword3.form-control(type='password', name='password' placeholder='Пароль')
        .form-group
          label.col-sm-2.control-label(for='inputPassword4') Пароль (Повтор)
          .col-sm-10
            input#inputPassword4.form-control(type='password', name='password2' placeholder='Пароль')
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type='submit') Зарегистрироваться
            br
            br
            |               Зарегистрированы?
            a(href='/') Авторизируйтесь
  // /.container

